//-link to the header.pug file in the partials folder in views
extends partials/header

//-link to the block position in header.pug file in the partials folder in views
block content
    h1#h1retrieving= message
    div#retrieving_form
        div.retrieving_form
            h2#h2retrieving Retrieving Username
            div#line2
            p#pretrieving Username will be sent to your email
            div#signup_form
        
                //Insert form
                form(method='POST' action='/retrieving_username' autocomplete='off')
                    div.retrieve_form
                        input.signup_input(type='email' placeholder='Email' name='email' required)
                    div.retrieve_form
                        input.signup_input(type='password' placeholder='Password' name='password' required)
                    div#signup_submit
                        button#retrieving_submit_button(type='submit' value='signup') Username
        div.retrieving_form
            h3#h2retrieving Delete your account
            div#line2
            p#pretrievingd Create another
            div#signup_form
        
                //Insert form
                form(method='POST' action='/delete_account' autocomplete='off')
                    div.retrieve_form
                        input.signup_input(type='email' placeholder='Email' name='email' required)
                    div.retrieve_form
                        input.signup_input(type='username' placeholder='Username' name='username' required)
                    div#signup_submit
                        button#retrieving_submit_button(type='submit' value='signup') Delete

    //-link to the footer.pug file in the partials folder in views
    include partials/footer
